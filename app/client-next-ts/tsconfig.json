{
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "@types/react", "@types/react-dom"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ef-api/smbdo-schemas": ["../../embedded-components/src/api/generated/smbdo.schemas.ts"],
      "@ef-api/ef-v1-schemas": ["../../embedded-components/src/api/generated/ef-v1.schemas.ts"],
      "@ef-api/ep-recipients-schemas": ["../../embedded-components/src/api/generated/ep-recipients.schemas.ts"],
      "@ef-api/ep-transactions-schemas": ["../../embedded-components/src/api/generated/ep-transactions.schemas.ts"],
      "@ef-api/ep-accounts-schemas": ["../../embedded-components/src/api/generated/ep-accounts.schemas.ts"]
    }
  }
}
